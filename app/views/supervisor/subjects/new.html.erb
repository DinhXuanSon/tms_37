<% provide(:title, t(:creat_subject)) %>
<h1>Create subject</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(Subject.new, url: supervisor_subjects_path) do |f| %>
      <%= label(:subject, :name)%>
      <%= f.text_field :name, class: 'form-control' %>

      <%= label(:subject, :instruction)%>
      <%= f.text_field :instruction, class: 'form-control' %>

      <%= label(:subject, :start_date)%>
      <%= f.date_field :start_date, class: 'form-control' %>      

      <%= label(:subject, :end_date)%>
      <%= f.date_field :end_date, class: 'form-control' %>

      <%= f.fields_for :tasks do |builder| %>
        <%= render @task_fields, :f => builder %>
      <% end %>
      <p><%= link_to_add_fields t(:Add_Tasks), f, :tasks %></p>
      <%= f.submit t(:creat_subject), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>